<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/po" >

    <Button
        android:id="@+id/btnbac"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnsub"
        android:layout_alignBottom="@+id/btnsub"
        android:layout_alignLeft="@+id/cb"
        android:background="@drawable/button_style"
        android:text="@string/btnba"
        android:textColor="@color/white"
        android:typeface="serif" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="73dp"
        android:layout_toRightOf="@+id/cb"
        android:background="@drawable/button_style"
        android:text="@string/btnsub"
        android:textColor="@color/white"
        android:typeface="serif" />

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnbac"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="72dp"
        android:text="@string/chbox"
        android:textColor="@color/white"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cb"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginBottom="78dp"
        android:text="@string/logpass"
        android:textColor="@color/white"
        android:typeface="serif" />

    <EditText
        android:id="@+id/etpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/cb"
        android:layout_marginRight="16dp"
        android:text="@string/logmail"
        android:textColor="@color/white"
        android:typeface="serif" />

    <EditText
        android:id="@+id/etmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

</RelativeLayout>
